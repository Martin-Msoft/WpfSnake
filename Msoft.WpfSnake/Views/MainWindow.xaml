<Window x:Class="Msoft.WpfSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Msoft.WpfSnake"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1616"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Frame Name="MainFrame" Source="Menu.xaml" NavigationUIVisibility="Hidden"/>
        <Label Content=".Snake" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Top" 
       Width="314" 
       FontSize="48" 
       FontFamily="Verdana" 
       Foreground="Black" Height="62" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center">
            <Label.Effect>
                <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="2"
                          BlurRadius="2"
                          Opacity="0.5"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
